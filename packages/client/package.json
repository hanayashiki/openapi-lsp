{
  "name": "openapilspclient",
  "repository": {
    "url": "https://github.com/hanayashiki/openapi-lsp"
  },
  "displayName": "OpenAPI LSP",
  "description": "Language support for OpenAPI/Swagger specifications",
  "version": "0.0.1",
  "publisher": "hanayashiki",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "openapi",
        "aliases": [
          "OpenAPI",
          "Swagger"
        ],
        "extensions": [
          ".openapi.yml"
        ],
        "filenames": [
          "openapi.yml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/logo.svg",
          "dark": "./icons/logo.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "openapi",
        "scopeName": "source.yaml",
        "path": "./syntaxes/yaml.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "bundle": "node esbuild.mjs",
    "clean": "rm -rf out dist *.tsbuildinfo",
    "package": "pnpm build && pnpm bundle && vsce package --no-dependencies",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "typescript": "catalog:"
  }
}
