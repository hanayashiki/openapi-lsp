{
  "name": "openapilspclient",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanayashiki/openapi-lsp"
  },
  "displayName": "OpenAPI LSP",
  "description": "Language support for OpenAPI/Swagger specifications",
  "version": "0.2.0",
  "publisher": "hanayashiki",
  "license": "MIT",
  "icon": "icons/plugin-icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "openapi",
        "aliases": [
          "OpenAPI",
          "Swagger"
        ],
        "extensions": [
          ".openapi.yml",
          ".openapi.yaml"
        ],
        "filenames": [
          "openapi.yml",
          "openapi.yaml"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/logo.svg",
          "dark": "./icons/logo.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "openapi",
        "scopeName": "source.yaml",
        "path": "./syntaxes/yaml.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "openapi-lsp.restart",
        "title": "OpenAPI: Restart Language Server"
      }
    ],
    "configuration": {
      "title": "OpenAPI LSP",
      "properties": {
        "openapi-lsp.discoverRoots.pattern": {
          "type": "string",
          "default": "**/*",
          "description": "The minimatch (https://www.npmjs.com/package/minimatch) glob pattern to ignore during OpenAPI document discovery"
        },
        "openapi-lsp.discoverRoots.ignore": {
          "type": "string",
          "default": "{**/node_modules/**,**/.git/**,**/.hg/**}",
          "description": "The minimatch (https://www.npmjs.com/package/minimatch) glob pattern to ignore during OpenAPI document discovery"
        },
        "openapi-lsp.debug.cache": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for cache invalidation and recomputation"
        }
      }
    }
  },
  "activationEvents": [
    "workspaceContains:**/*.openapi.yml",
    "workspaceContains:**/*.openapi.yaml",
    "workspaceContains:**/openapi.yml",
    "workspaceContains:**/openapi.yaml"
  ],
  "scripts": {
    "bundle": "tsx scripts/esbuild.ts",
    "watch": "pnpm bundle --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "package": "pnpm bundle && vsce package --no-dependencies",
    "publish": "",
    "test": "echo \"No tests yet\"",
    "check": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "@openapi-lsp/core": "workspace:*",
    "zod": "catalog:"
  }
}
