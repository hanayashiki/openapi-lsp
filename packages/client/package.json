{
  "name": "@openapi-lsp/client",
  "displayName": "OpenAPI Language Support",
  "description": "Language support for OpenAPI/Swagger specifications",
  "version": "0.0.1",
  "publisher": "openapi-lsp",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Linters"],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:json",
    "workspaceContains:**/openapi.yaml",
    "workspaceContains:**/openapi.json",
    "workspaceContains:**/swagger.yaml",
    "workspaceContains:**/swagger.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "openapi",
        "aliases": ["OpenAPI", "Swagger"],
        "extensions": [".openapi.yaml", ".openapi.yml", ".openapi.json"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "OpenAPI LSP",
      "properties": {
        "openapi-lsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "openapi-lsp.validate": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable/disable OpenAPI validation."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "rm -rf out *.tsbuildinfo",
    "package": "pnpm vsce package --no-dependencies",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.1",
    "typescript": "catalog:"
  }
}
