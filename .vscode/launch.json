{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "exampleFolder",
      "type": "command",
      "command": "workbench.action.quickOpen",
      "args": ""
    },
    {
      "id": "folderPath",
      "type": "promptString",
      "description": "Enter folder path relative to workspace (e.g., examples/ring-ref)",
      "default": "examples"
    }
  ],
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/client",
        "${workspaceFolder}/${input:folderPath}"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/client/out/**/*.js",
        "${workspaceFolder}/packages/server/out/**/*.js"
      ],
      "preLaunchTask": "npm: bundle"
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": ["${workspaceFolder}/packages/server/out/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": [
        "Launch Extension (Debug Server)",
        "Attach to Language Server"
      ]
    }
  ]
}
