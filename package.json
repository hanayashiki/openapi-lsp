{
  "name": "openapi-lsp",
  "version": "0.0.1",
  "description": "OpenAPI Language Server Protocol implementation for VS Code",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm --filter openapilspclient run bundle",
    "watch": "pnpm --filter openapilspclient run watch",
    "check": "pnpm -r check",
    "bundle": "pnpm -r run bundle",
    "lint": "oxlint packages --ignore-pattern '*.d.ts'",
    "lint:fix": "oxlint packages --fix --ignore-pattern '*.d.ts'",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r run test",
    "package": "pnpm --filter openapilspclient run package",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "oxlint": "^1.36.0",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.26.2"
}
